<% layout("layouts/boilerplate.ejs") %>

    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your Listing</h3>
            <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-lable m-0">Title</label>
                    <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                    <div class="invalid-feedback"> Enter title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-lable m-0">Description</label>
                    <textarea type="text" name="listing[description]"
                        class="form-control" required><%= listing.description %></textarea>
                        <div class="invalid-feedback"> Enter a short Description</div>
                </div>
                <div class="mb-3">
                    Original Image <br>
                    <img src="<%= listing.image.url %>" class="img-fluid" alt="listing image">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-lable m-0">Upload New Image</label>
                    <input type="file" name="listing[image]" class="form-control"> 
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-lable m-0">Price</label>
                        <input type="" name="listing[price]" value="<%= listing.price %>" class="form-control" required>
                        <div class="invalid-feedback"> Price should be valid </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-lable m-0">Country</label>
                        <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
                        <div class="invalid-feedback"> Country name should be valid</div>
                    </div>
                </div>

                <div class="">
                    <label for="location" class="form-lable m-0">Locaton</label>
                    <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
                    <div class="invalid-feedback"> Location should be valid</div>
                </div>
                <div class="text-center">
                    <button class="btn btn-dark edit-btn px-4 my-3"> Edit </button>
                </div>
            </form>

        </div>
    </div>