<% layout('layouts/boilerplate.ejs') %>


    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Create a New Listing</h3>
            <form action="/listings" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label m-0">Title</label>
                    <input type="text" name="listing[title]" placeholder="enter title" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter title
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label m-0">Description</label>
                    <textarea type="text" name="listing[description]" class="form-control" required> </textarea>
                    <div class="invalid-feedback">
                        Please enter a short description
                    </div>
                </div>
                <!-- <div class="mb-3">
                    <label for="image" class="form-label m-0">Image</label>
                    <input type="text" name="listing[image]" placeholder="Enter Image URL/LINK" class="form-control">
                </div> -->
                <div class="mb-3">
                    <label for="image" class="form-label m-0">Upload Listing Image</label>
                    <input type="file" name="listing[image]" placeholder="Enter Image URL/LINK" class="form-control">
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label m-0">Price</label>
                        <input type="" name="listing[price]" placeholder="1300" class="form-control" required>
                        <div class="invalid-feedback">
                            Price should be valid
                        </div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label m-0">Country</label>
                        <input type="text" name="listing[country]" placeholder="Indai" class="form-control" required>
                        <div class="invalid-feedback">
                            Country name should be valid
                        </div>
                    </div>
                </div>
                <div>
                    <label for="location" class="form-label m-0">Location</label>
                    <input type="text" name="listing[location]" placeholder="jaipur" class="form-control" required>
                    <div class="invalid-feedback">
                        Location should be valid
                    </div>
                </div>
                <div class="text-center">
                    <button class="btn btn-dark px-4 add-btn my-3"> Add </button>
                </div>

            </form>
        </div>
    </div>