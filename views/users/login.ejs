<% layout("layouts/boilerplate.ejs") %>


    <div class="row justify-content-center my-3">
        <div class="col-lg-6 col-10 login-form">
            <h4 class="text-center mb-4">Login to Your Account</h4>
            <form action="/login" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" name="username" class=" form-control border w-100 p-2 login_singup_radius"
                        id="loginUsername" placeholder="Username" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class=" form-control border w-100 p-2 login_singup_radius"
                        id="loginPassword" placeholder="Password" required>
                </div>
                <div class="text-center mb-3">
                    <button class="login_singup_radius w-50 p-2 loginSubmitBtn text-white">Login</button>
                </div>
                 <div class="d-flex gap-2">
                    <p class="text-decoration-underline">Create have an Account: </p>
                    <a class="text-decoration-none fe424d" href="/signup">SignUp</a>
                </div>
            </form>
        </div>
    </div>